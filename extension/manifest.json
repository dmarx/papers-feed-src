{
  "manifest_version": 3,
  "name": "ArXiv Paper Tracker",
  "version": "1.0",
  "description": "Track and rate arXiv papers you read",
  "permissions": [
    "tabs",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "*://arxiv.org/*",
    "*://api.github.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}